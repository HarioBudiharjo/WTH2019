<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.DetailDataActivity">

    <TextView
            android:text="Kapan mau dimulai?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="Tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Premi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Detail Benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Asuransi berlaku 1 tahun dari 10 September 2019 - 31 September 2019"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View
            android:outlineAmbientShadowColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <TextView
            android:text="Lengkapi Detail"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
            android:text="Pastikan data yang dimasukkan sesuai dengan data yang terdapat di KTP"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:text="Nama Lengkap (Sesuai KTP)"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Tanggal Lahir"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Alamat Email"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Nomer Handphone"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Polis akan dikirim melakukan e-mail dan notifikasi"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="Dengan ini saya dengan Syarat dan Ketentuan berlaku."
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
            android:text="Bayar Asuransi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>