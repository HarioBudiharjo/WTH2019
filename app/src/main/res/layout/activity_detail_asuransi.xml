    </LinearLayout>

    <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <TextView
            android:text="Kontak Klaim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ImageView
            android:src="@drawable/axamandiri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="Customer Care Centre\n+62 21 3005 8788"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Download Formulir Klaim"
            android:layout_width="match_parent"
