<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.DetailPembelianActivity">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"
                    android:text="Cek kembali paket asuransi, periode asuransi dan daftar anggota yang dimasukkan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Informasi Asuransi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:text="Kategori"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_weight="1"
                        android:text="Asuransi Perjalanan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:text="Paket Asuransi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_weight="1"
                        android:text="Individu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:text="Periode Asuransi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_weight="1"
                        android:text="10 September 2019 - 10 September 2020"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:text="Perlindungan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_weight="1"
                        android:text="Perawatan Medis Pencurian dan kebakaran Kecelakaan diri Bantuan darurat di jalan Biaya Pemakaman"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

            <TextView

                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Daftar Anggota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Dewasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="Hario Budiharjo (Pemegang Polis)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="28 Juni 1993"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View

                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

            <TextView
                    android:textStyle="bold"
                    android:text="Detail Pembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="1 Paket Asuransi"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Rp 20,000"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <View
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

            <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textStyle="bold"
                        android:text="Total Pembayaran"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Rp 20,000"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                    android:id="@+id/button_bayar"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:text="Lanjut Bayar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>