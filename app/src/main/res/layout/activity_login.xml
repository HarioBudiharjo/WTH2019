<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/gradient_splash"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:padding="20dp"
            android:src="@drawable/mandiri_putih"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"/>
    <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:textColor="#282133"/>
        <EditText
                android:text="hariobudiharjo@gmail.com"
                android:hint=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#B9B7B7"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" android:id="@+id/edtEmail"/>
        <TextView
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:textColor="#282133"/>
        <EditText
                android:text="pass1234"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#B9B7B7"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" android:id="@+id/edtPassword"/>

        <Button
                android:background="@android:color/white"
                android:id="@+id/btn_login"
                android:text="Login"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
        >
            <TextView
                    android:text="Don't have a account?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textSize="14dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>